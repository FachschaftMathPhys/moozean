{{#paper-dialog class="flex-77" onClose=(action closeDialog "cancel") origin=dialogOrigin clickOutsideToClose=true}}
  {{#paper-toolbar}}
    {{#paper-toolbar-tools}}
      <h2>{{title}}</h2>
      <span class="flex"></span>
      {{#paper-button iconButton=true onClick=(action closeDialog "cancel")}}{{paper-icon icon="close"}}{{/paper-button}}
    {{/paper-toolbar-tools}}
  {{/paper-toolbar}}
  {{#paper-form onSubmit=(action closeDialog "ok") as |form|}}
  {{#paper-dialog-content}}
      <div class="flex layout-column">
    {{form.input flex=30 label="Name" value=folder.name required=true onChange=(action (mut folder.name))}}
    {{paper-input textarea=true block=true label="Text" required=true passThru=(hash rows=5)
    value=folder.content onChange=(action (mut folder.content))}}
    {{#paper-switch flex=30 value=folder.obligationToReport onChange=(action (mut folder.obligationToReport))}}
     Pfandpflichtig?
    {{/paper-switch}}
    </div>
  {{/paper-dialog-content}}
  {{#paper-dialog-actions class="layout-row"}}
    <span class="flex"></span>
    {{#paper-button onClick=(action closeDialog "cancel")}}Cancel{{/paper-button}}
    {{#paper-button  onClick=(action closeDialog "ok" student) disabled=form.isInvalid}}{{#if saving}}{{paper-icon "rotate-right" spin=true}}{{/if}} OK{{/paper-button }}
  {{/paper-dialog-actions}}
  {{/paper-form}}
{{/paper-dialog}}
{{yield}}
