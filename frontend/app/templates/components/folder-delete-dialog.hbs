<PaperDialog @class="flex-77" @onClose={{action closeDialog "cancel"}} @origin={{dialogOrigin}} @clickOutsideToClose={{true}}>
  <PaperToolbar>
    <PaperToolbarTools>
      <h2>{{title}}</h2>
      <span class="flex"></span>
      <PaperButton @iconButton={{true}} @onClick={{action closeDialog "cancel"}}><PaperIcon @icon="close" /></PaperButton>
    </PaperToolbarTools>
  </PaperToolbar>
  <PaperDialogContent>
      <div class="flex layout-column">
    Willst du {{folder.folderseries.name}}{{folder.suffix}} wirklich löschen?</div>
  </PaperDialogContent>
  <PaperDialogActions @class="layout-row">
    <span class="flex"></span>
    <PaperButton @tabindex={{2}} @onClick={{action closeDialog "löschen" folder}}>Löschen</PaperButton>
    <PaperButton @tabindex={{1}} @onClick={{action closeDialog "cancel" folder}}>Abbrechen</PaperButton>
  </PaperDialogActions>
</PaperDialog>
{{yield}}
