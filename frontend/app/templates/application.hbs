<PaperSidenavContainer @class="layout-row layout-xs-column">
<PaperSidenav @class="md-whiteframe-z2 site-sidenav flex overflow-x-hidden" @name="left2" @open={{open}} @closeOnClick={{true}} @onToggle={{action (mut open)}} @flex-layout="column" @flex={{true}}>
  <PaperToolbar @tall={{true}} as |toolbar|>
    <PaperToolbarTools><div style="text-align:center; margin:auto;">
      {{svg-jar "ocean"  height="130px" width="140px"}}<br/>
      <b>Moozean</b>
    </div></PaperToolbarTools>
  </PaperToolbar>
  <PaperContent @padding={{false}}>
    <PaperList>
      <MenuItem @active={{is-active "index" currentRouteName}} @onClick={{transition-to "index"}}>{{paper-icon "swap horiz" class="site-nav-icon"}}Ausleihe</MenuItem>
      <MenuItem @active={{is-active "moor.search" currentRouteName}} @onClick={{transition-to "moor.search"}}>{{paper-icon "search" class="site-nav-icon"}}Berichtssuche</MenuItem>
      <MenuItem @active={{is-active "moor.report.new" currentRouteName}} @onClick={{transition-to "moor.report.new"}}>{{paper-icon "assignment" class="site-nav-icon"}}Bericht eintragen</MenuItem>
      <MenuItem @active={{is-active "moor" currentRouteName}} @onClick={{transition-to "moor"}}>{{paper-icon "dns" class="site-nav-icon"}}Ordnerreihen</MenuItem>
    <MenuItem @active={{is-active "moor.inmail" currentRouteName}} @onClick={{transition-to "moor.inmail"}}>{{paper-icon "email" class="site-nav-icon"}}Mails bearbeiten</MenuItem>
    <MenuItem @active={{is-active "moor.management.students" currentRouteName}} @onClick={{transition-to "moor.management.students"}}>{{paper-icon "face" class="site-nav-icon"}}Studierende</MenuItem>
      <MenuItem @active={{is-active "moor.management.examinators" currentRouteName}} @onClick={{transition-to "moor.management.examinators"}}>{{paper-icon "perm identity" class="site-nav-icon"}}Pr√ºfende</MenuItem>
      <MenuItem @active={{is-active "moor.management" currentRouteName}} @onClick={{transition-to "moor.management"}}>{{paper-icon "settings" class="site-nav-icon"}}sonstige Verwaltung</MenuItem>
    </PaperList>
  </PaperContent>
</PaperSidenav>

  <PaperContent @flex-layout="column" @class="flex row layout-column overflow-x-hidden">
    {{outlet}}
    <PaperToaster />
    </PaperContent>

 </PaperSidenavContainer>
