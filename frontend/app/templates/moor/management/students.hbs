{{#paper-toolbar}}
   {{#paper-toolbar-tools}}
    {{#paper-sidenav-toggle name="left2" as |toggleAction|}}
            {{#paper-button classNames="hide-gt-sm" iconButton=true onClick=(action toggleAction)}}
      {{paper-icon icon="menu"}}
      {{/paper-button}}
    {{/paper-sidenav-toggle}}
     <h2>Moor {{paper-icon "chevron-right"}} Verwaltung {{paper-icon "chevron-right"}} Studierende <span class="hide-sm"></span></h2>
     <span class="flex"></span>
     {{#paper-button iconButton=true onClick=(action "addstudent")}}
       {{paper-icon "person add"}}
     {{/paper-button}}
     {{#paper-button iconButton=true}}
       {{paper-icon "more_vert"}}
     {{/paper-button}}
   {{/paper-toolbar-tools}}
 {{/paper-toolbar}}
{{#paper-content class="md-padding"}}
{{#paper-card as |card|}}
    {{#paper-list}}
      {{#each model as |student|}}
        {{#paper-item class="md-2-line"}}
          {{paper-icon "folder" class="md-avatar-icon"}}
            <div class="md-list-item-text">
              <h3>{{student.name}}</h3>
              <p>{{student.uniid}}</p>
            </div>

            {{#if student.refund}}{{paper-icon "attach money"}}{{/if}}
            {{#if student.report}}{{paper-icon "description"}}{{/if}}


            <div class="flex">
            </div>
            {{#paper-button iconButton=true onClick=(action "editstudent" student)}}{{paper-icon "edit"}}{{/paper-button}}
            {{#paper-button iconButton=true onClick=(action "deletestudent" student)}}{{paper-icon "delete"}}{{/paper-button}}
          {{/paper-item}}
          {{paper-divider}}
        {{/each}}
    {{/paper-list}}
  {{#card.actions}}
    {{#paper-button primary=true onClick=(action "addstudent")}}Neues Studierendes{{/paper-button}}
  {{/card.actions}}
{{/paper-card}}
{{/paper-content}}
{{#if showCreatestudentDialog}}{{student-create-dialog closeDialog=(action "closestudentDialog") title='Erstelle Studierendes' student=newstudent}}{{/if}}
{{#if showEditstudentDialog}}{{student-create-dialog closeDialog=(action "closestudentDialog") title='Bearbeite Studierendes' student=newstudent}}{{/if}}
